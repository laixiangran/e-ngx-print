{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "aot",
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./"
  },
  "files": [
    "aot/index.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "example"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot/factories"
  }
}